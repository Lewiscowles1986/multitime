CC=@CC@
CFLAGS=@CFLAGS@
LIBS=@LIBS@
prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
INSTALL = @INSTALL@


MULTITIME_OBJS = statistics.o format.o multitime.o


all: multitime


multitime: ${MULTITIME_OBJS}
	${CC} -o multitime ${MULTITIME_OBJS} ${LIBS}


install: multitime
	install -d ${DESTDIR}${bindir}
	install -c -m 555 multitime ${DESTDIR}${bindir}
	install -d ${DESTDIR}${prefix}/man/man1
	install -c -m 444 multitime.1 ${DESTDIR}${prefix}/man/man1/multitime.1


clean:
	rm -f multitime ${MULTITIME_OBJS}
	cd tests && ${MAKE} ${MFLAGS} clean


distclean: clean
	rm -rf configure Makefile Config.h Config.h.in autom4te.cache config.log \
	  config.status
	cd tests && ${MAKE} ${MFLAGS} distclean


distrib:
	${MAKE} distclean
	${MAKE} -f Makefile.bootstrap
	@read v?'multitime version: '; mkdir multitime-$$v; \
      cp `ls | grep -E -v "(autom4te.cache)|(Makefile.bootstrap)|(multitime-$$v)"` multitime-$$v; \
      tar cfz multitime-$$v.tar.gz multitime-$$v; rm -rf multitime-$$v


test:
	cd tests && ${MAKE} ${MFLAGS}
